{
  "name": "pug-monorepo",
  "private": true,
  "devDependencies": {
    "coveralls": "^2.11.2",
    "jest": "^18.1.0",
    "lerna": "2.0.0-beta.32",
    "prettier": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pugjs/pug.git"
  },
  "scripts": {
    "clean": "lerna clean",
    "release": "lerna publish",
    "postinstall": "lerna bootstrap",
    "pretest": "lerna run pretest",
    "test": "jest",
    "test-lexer": "jest packages/pug-lexer/test/index.test.js",
    "test-parser": "jest packages/pug-parser/test/index.test.js",
    "coverage": "jest --coverage",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "watch": "jest --watch",
    "watch-lexer": "jest --watch packages/pug-lexer/test/index.test.js",
    "watch-parser": "jest --watch packages/pug-parser/test/index.test.js"
  },
  "jest": {
    "testEnvironment": "node",
    "snapshotSerializers": [
      "./scripts/filename-serializer.js",
      "./scripts/prettier-javascript-serializer.js"
    ]
  },
  "license": "MIT"
}
